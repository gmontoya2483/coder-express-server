                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
                </thead>
                <tbody id="productsContent">
                {{#each products}}
                    <tr>
                        <td>{{ this.title }}</td>
                        <td>{{ this.price }}</td>
                        <td>
